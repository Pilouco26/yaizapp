{
  "expo": {
    "name": "Yaizapp",
    "slug": "yaizapp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#f4511e"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yaizapp.app",
      "infoPlist": {
        "NSDocumentsFolderUsageDescription": "Esta app necesita acceso a documentos para importar archivos CSV de facturas."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#f4511e"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.yaizapp.app"
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-secure-store",
      "expo-document-picker"
    ]
  }
}
